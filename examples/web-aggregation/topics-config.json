  "general": {
    "default_language": "zh",
    "default_max_results": 5,
    "default_time_range": "week",
    "duplicate_check": true,
    "summary_length": 200,
    "include_source_metadata": true,
    "cache_enabled": true,
    "cache_ttl_hours": 6,
    "rate_limit_requests_per_minute": 10,
    "user_agent": "Continuous-Learning-Bot/1.0",
    "timeout_seconds": 30
  },
  "output": {
    "format": "obsidian",
    "directory": "000 Inbox",
    "filename_template": "Web-Aggregation-{topic}-{date}.md",
    "frontmatter": {
      "date_created": "{date}",
      "tags": ["web-aggregation", "auto-learning", "{topic}"],
      "source": "Tavily API"
    },
    "sections": ["summary", "articles", "trends", "recommendations"],
    "include_original_links": true,
    "include_relevance_scores": true,
    "group_by_source": false
  },
  "quality": {
    "min_content_length": 100,
    "max_content_length": 5000,
    "require_https": true,
    "exclude_paywalled": true,
    "exclude_low_quality_domains": true,
    "preferred_domains": [
      "github.com",
      "medium.com",
      "towardsdatascience.com",
      "arxiv.org",
      "ieee.org"
    ],
    "blacklisted_domains": [
